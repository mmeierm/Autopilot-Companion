<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CompanionApp.Views.AboutPage"
             xmlns:vm="clr-namespace:CompanionApp.ViewModel"
             Title="{Binding Title}"
             >
              

    

    <ContentPage.BindingContext>
        <vm:AboutViewModel />
    </ContentPage.BindingContext>

    <StackLayout>
        <Label Text="Autopilot Companion App" FontSize="20" FontAttributes="Bold"/>
        <Label />
        <Label Text="The Autopilot Companion App is based on the sample application Windows Autopilot Companion."/>
        <Label />
        <Label Text="With this App you can set Group Tags for Autopilot Devices as needed for Windows Autopilot white glove deployment scenarios." />
        <Label />

        <Label Text="With the App Search function you can search for Win32 or MSI Line of Business Apps via MSI App Code or App ID. (Startswith search possible)" />
        <Label />
        <Label Text="Version 1.16"/>
        <Button Margin="0,10,0,0" Text="Learn more about Autopilot" Command="{Binding OpenWebCommand}" BackgroundColor="Gray" TextColor="White" FontAttributes="Bold" VerticalOptions="EndAndExpand"/>
        <Label />
        <Label />
        <Label />
        <Label />
    </StackLayout>
</ContentPage>